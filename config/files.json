    {
      "name": "example",
      "data": {
        "test": "success"
      },
      "jobs": {
        "template": {
          "composers": ["readInFile"],
          "bufferName": "templates",
          "files": [{
            "path": "./templates/example.html",
            "name": "example"
          },{
            "path": "./templates/example.html",
            "name": "anotherExample"
          }]
        },
        "markdown": {
          "composers": ["readInFile"], 
          "bufferName": "markdown",
          "files": [{
            "path": "./markdown/intro.md",
            "name": "intro"
          }]
        },
        "renderMarkdown": {
          "composers": ["markdownToHtml"]
        },
        "compileTemplates": {
          "bufferName": "templates",
          "composers": ["compileTemplates"]
        },
        "renderTemplate": {
          "composers": ["renderTemplate", "writeOutHtml"], 
          "files": [{
            "markdown": "intro",
            "template": "example",
            "outputPath": "./output/success.html"
          }]
        }
      }
    }
  ]
